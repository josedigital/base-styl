@keyframes fadeInLeftBig
  0%
    opacity(0)
    transform translate3d(-100%, 0, 0)
  100%
    opacity(1)
    transform none
.fade-in-left-big
  animation-name fadeInLeftBig

@keyframes fadeInRight
  0%
    opacity(0)
