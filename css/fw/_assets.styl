// Custom Buttons
button,
.button
  padding 5px 22px
  border-radius 4px
  background-color transparent
  color dark-gray
  cursor pointer
  text-align center
  text-decoration none
  display inline-block
  border 1px solid med-gray
  transition()
  &:hover, &:active
    text-decoration none
  &:hover
    border-color dark-gray
    color dark-gray
  
  &.inverse
    inverse()
    &.primary
      inverse(color-base)
    &.secondary
      inverse(triadic-secondary)
    &.tertiary
      inverse(triadic-tertiary)
    &.complementary
      inverse(color-complementary)

  &.primary
    background-color color-base
    border-color color-base
    color white
    &:hover
      background darken(color-base, 30%)
  &.secondary
    background-color triadic-secondary
    border-color triadic-secondary
    color white
    &:hover
      background darken(triadic-secondary, 30%)
  &.tertiary
    background-color triadic-tertiary
    border-color triadic-tertiary
    color white
    &:hover
      background darken(triadic-tertiary, 30%)
  &.complementary
    background-color color-complementary
    border-color color-complementary
    color white
    &:hover
      background darken(color-complementary, 30%)

  &.disabled
  &:hover
    border-color darken(light-gray, 10%)
  
  &.pill
    display inline-block
    border-radius 25px
    padding 7px 15px 5px
    text-transform uppercase
    border-width 1px
    border-style solid
    transition()
    &:hover
      transition()
      &:after
        content '›'
        font-size(20)
        display inline
        top 0
        opacity 1
        margin-left 16px
    &:after
      content '›'
      font-size(0)
      display inline
      line-height(5)
      top -3px
      opacity 0
      margin-left 0
      position relative
      transition()




// Button Styled as Link
.button-link
  color base-link-color
  text-decoration underline
  border 0
  background transparent
  padding 0
  &:hover
    text-decoration none
  &:active
    outline 0



// Custom Select
.select
  border 1px solid #ccc
  overflow hidden
  height 36px
  line-height 32px
  padding 0 .4em
  position relative
  display block
  &:before
    content ""
    border 6px solid transparent
    border-top-color #676767
    top 50%
    right 10px
    margin-top -3px
    pointer-events none
    position absolute
  select
    -webkit-appearance none
    -moz-appearance none
    width 120%
    height 36px
    padding 0
    // line-height normal
    border 0
    background transparent
    display block
    &:focus
      outline 0



