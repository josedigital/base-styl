body
  background url('../img/bio.jpg') center center no-repeat
  background-attachment fixed
  background-size cover
  height 100vh


section.main
  background white

  nav
    position fixed
    left 0
    right 0
    height 50px
    padding 0.65em 5% 0
    background white
    z-index 5
    border-bottom 1px solid lighten(med-gray, 80%)
    
    .nav-hds
      float left

    
    ul.main-nav
      float right
      text-align right
    
      a.active
        color med-gray


  .hds
    width 80%
    margin 0.85em auto 0

  .hds,
  .tagline
    text-align center
  .tagline
    margin-top -10px
    font-family heading-font-family
  
  .page-content
    padding-top 8%

  .hello
    margin-top -14%




section.contact
  height 100%
  position relative
  




  .contact-form
    padding 3em
    width 100%
    height 100%
    transition()
    background rgba(color-secondary, 0.8)
    
    legend
      color white
    label
      font-size(10)
      text-transform uppercase
      color white
    input, textarea
      font-size(14)
    textarea
      padding 0.5em
      min-height 150px
    
    // special styling
    input,
    textarea
      background transparent
      border none
      outline 0
      border-bottom 1px solid rgba(white, 0.5)
    textarea
      background rgba(white, 0.5)

    input::-webkit-input-placeholder 
      color rgba(white, 0.5) !important

     
    input:-moz-placeholder
      color rgba(white, 0.5) !important

     
    input::-moz-placeholder
      color rgba(white, 0.5) !important

     
    input:-ms-input-placeholder
      color rgba(white, 0.5) !important


    .close
      position relative
      top -1.5em
      &:before
        content 'x'
        color #fff
        font-weight 300
        border 1px solid white
        border-radius(30px)
        padding 10px 17px


section.work
  clear both
  background white
  padding-top 4em